FROM debian:jessie

RUN apt-get update && \
    apt-get install -y libpq-dev && \
    rm -rf /var/lib/apt/lists/*

RUN mkdir -p /root/.cabal/bin
WORKDIR /root/.cabal/bin

COPY systems/build/non-stack-yesod.tar.gz /root/.cabal/bin/non-stack-yesod.tar.gz
RUN tar -xzf non-stack-yesod.tar.gz non-stack-yesod

CMD ./non-stack-yesod
